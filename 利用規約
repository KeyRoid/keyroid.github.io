  <script>
    const $ = sel => document.querySelector(sel);
    const ja = $('#ja'), en = $('#en'), bja = $('#btn-ja'), ben = $('#btn-en');
    const setLang = (lang) => {
      if (lang === 'en') { en.classList.remove('hidden'); ja.classList.add('hidden'); ben.classList.add('active'); bja.classList.remove('active'); }
      else { ja.classList.remove('hidden'); en.classList.add('hidden'); bja.classList.add('active'); ben.classList.remove('active'); }
      localStorage.setItem('terms_lang', lang);
    };
    bja.onclick = () => setLang('ja');
    ben.onclick = () => setLang('en');
    setLang(localStorage.getItem('terms_lang') || (navigator.language.startsWith('ja') ? 'ja' : 'en'));
    $('#y').textContent = new Date().getFullYear();
  </script>
